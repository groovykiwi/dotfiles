[colors]
transparent = #00000000
background = ${xrdb:color0:#000000}
foreground = ${xrdb:color15:#ffffff}
accent = ${xrdb:color2:#ff0000}
accent2 = ${xrdb:color3:#ffff00}

[values]
margin = 2

[bar/top]
width = 100%
height = 2.8%
radius = 0.0
fixed-center = true
line-size = 2
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = Fira Code Nerd Font:size=13;3

;Module Positions
modules-left = i3 spotify
modules-center = titlehook 
modules-right =  filesystem vpn audiodevice pulseaudio date battery powermenu

;System Tray
tray-position = right
tray-offset-x = -560px
tray-offset-y = 0
tray-padding = 0
tray-background= ${colors.background}
tray-scale = 1
override-redirect = false
enable-ipc = false
tray-detached = true

cursor-click = pointer
cursor-scroll = ns-resize

#underline-size = 2
; LEFT MODULES

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
label-mode-underline = ${colors.accent}

; Focused = Active workspace on focused monitor
label-focused = %name%
label-focused-color = ${colors.foreground}
label-focused-background = ${colors.accent}
label-focused-padding = 3

; Unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-color = ${colors.foreground}
label-unfocused-padding = 2

; Visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 2
label-visible-color = ${colors.foreground}

; Urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-color = ${colors.foreground}
label-urgent-background = ${colors.accent2}
label-urgent-padding = 2

[module/spotify]
format-margin = 0
type = custom/script
interval = 0
format = <label>
exec = python $HOME/scripts/polybar-spotify/spotify_status.py --font=0 -f '{play_pause} {artist} - {song}  ' -t 65 -p '   ,  契 '
#format-underline = ${colors.accent}
click-left = playerctl -p spotify play-pause
click-middle = if ! [[ -z $(pgrep spotify-lyrics) ]]; then wmctrl -x -R spotify-lyrics; else i3-msg exec "st -g 50x20-50+150 -n spotify-lyrics -e spotify-lyrics"; fi
click-right = playerctl -p spotify next



; CENTER MODULES

[module/titlehook]
type = custom/script
tail = false
label = %output%
interval = 0
exec = $HOME/scripts/displaytitle
format-underline = ${colors.accent}
click-right = touch .config/polybar/config -m
click-middle = $HOME/scripts/lagfix


; RIGHT MODULES


[module/filesystem]
label-mounted-padding-right = 2
type = internal/fs
interval = 25
mount-0 = /home
label-mounted = %{A1:baobab &:}/home: %free%%{A}
fixed-values = false

[module/vpn]
label-padding-right = 3
type = custom/script
tail = false
label = vpn:%output% 
interval = 0
exec = $HOME/scripts/expressvpn_module -s
click-left = /$HOME/scripts/expressvpn_module -c
click-right = /$HOME/scripts/expressvpn_module -d


[module/audiodevice]
type = custom/script
tail = false
label = "%output%"
interval = 0
exec = $HOME/scripts/display-audio-device
click-left = i3-msg exec $HOME/scripts/switch-audio-output
click-right = $HOME/scripts/call_pavucontrol
scroll-up = $HOME/scripts/vol-up
scroll-down = $HOME/scripts/vol-down
#format-underline = ${colors.accent}

[module/pulseaudio]
label-muted-padding-right = ${values.margin}
ramp-volume-padding-right = ${values.margin}
type = internal/pulseaudio
use-ui-max = true ;goes above 100%
label-volume = %percentage%%
format-volume = <label-volume> <ramp-volume>
label-muted = 0% ﱝ 
label-muted-foreground = #aaaaaa
; Only applies if <ramp-volume> is used
ramp-volume-0 =  
ramp-volume-1 =  
ramp-volume-2 =  
#format-volume-underline = ${colors.accent}
#format-muted-underline = ${colors.accent}

[module/date]
label-padding-right = ${values.margin}
type = internal/date
interval = 5
date = %a %d %b 
time = %I:%M %p 
format-prefix-foreground = ${colors.foreground}
label =%date% %time%


[module/battery]
format-margin = ${values.margin}
type = internal/battery
; This is useful in case the battery never reports 100% charge
full-at = 99
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1
; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
; Disable polling by setting the interval to 0.
; Default: 5
poll-interval = 5


[module/powermenu]
type = custom/menu
expand-right =false
format-spacing = 0
label-open = 
label-close = 
label-separator = "  "
menu-0-0 = " "
menu-0-0-exec = i3-msg exit
menu-0-1 = 
menu-0-1-exec = reboot
menu-0-2 = 
menu-0-2-exec = shutdown now
menu-0-2-foreground = ${colors.accent}


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over



[global/wm]
margin-top = 5
margin-bottom = 5