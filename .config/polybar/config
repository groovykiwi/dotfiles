;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
transparent = #00000000
background = ${xrdb:color0:#000000}
foreground = #ffffff
accent = ${xrdb:color2:#ff0000}


[bar/top]
width = 100%
height = 2.5%
radius = 0.0
fixed-center = true
line-size = 2
background = ${colors.transparent}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 0

;Fonts
font-0 = SF Pro Text:style=Regular:size=14;3
font-1 = Font Awesome 5 Brands:style=Solid:size=13;2
font-2 = Font Awesome 5 Free:style=Solid:size=13;2

;Module Positions
modules-left = i3 spotify
modules-center = titlehook 
modules-right =  vpn filesystem  pulseaudio audiodevice date battery powermenu

;[System Tray]
;tray-position = center
tray-offset-x = 25%
tray-offset-y = 1
tray-padding = 0
tray-background= ${colors.background}
tray-scale = 1
override-redirect = false
enable-ipc = false
tray-detached = true

cursor-click = pointer
cursor-scroll = ns-resize


; LEFT MODULES

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
label-mode-underline = #abababab

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-color = ${colors.foreground}
label-focused-background = ${colors.accent}
label-focused-padding = 5
; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-color = ${colors.foreground}
label-unfocused-padding = 2
; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-padding = 2
label-visible-color = ${colors.foreground}
; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-color = ${colors.foreground}
label-urgent-padding = 2


[module/spotify]
type = custom/script
interval = 0
format = <label>
exec = python $HOME/scripts/polybar-spotify/spotify_status.py --font=0 -f '{play_pause} {artist} - {song}  ' -t 70 -p '   ,   '
format-underline = ${colors.accent}
click-left = playerctl play-pause
click-right = wmctrl -x -a "Spotify"
click-middle = playerctl next



; CENTER MODULES

[module/titlehook]
type = custom/script
tail = false
label = %output%
interval = 0
exec = $HOME/scripts/displaytitle
format-underline = ${colors.accent}



; RIGHT MODULES

[module/vpn]
type = custom/script
tail = false
label = %output% |
interval = 0
exec = $HOME/scripts/vpn_status
click-right = bash /$HOME/scripts/vpn_connect


[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /home
label-mounted = %free% left |
fixed-values = true


[module/pulseaudio]
type = internal/pulseaudio
;If true goes above 100%
use-ui-max = true
label-volume = %percentage%%
format-volume = <label-volume> <ramp-volume>
label-muted = 0%  |
label-muted-foreground = #aaaaaa
; Only applies if <ramp-volume> is used
ramp-volume-0 =  |
ramp-volume-1 =  |
ramp-volume-2 =  |


[module/audiodevice]
type = custom/script
tail = false
label = %output% |
interval = 0.1
exec = $HOME/scripts/display-audio-device
click-left = i3-msg exec $HOME/scripts/switch-audio-output
click-right = pavucontrol &


[module/date]
type = internal/date
interval = 5
date = %a %d %b |
time = %I:%M %p |
format-prefix-foreground = ${colors.foreground}
label =%date% %time%


[module/battery]
type = internal/battery
; This is useful in case the battery never reports 100% charge
full-at = 99
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1
; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
; Disable polling by setting the interval to 0.
; Default: 5
poll-interval = 5


[module/powermenu]
type = custom/menu
expand-right =false
format-spacing = 0
label-open = 
label-close = 
label-separator = "  "
menu-0-0 = 
menu-0-0-exec = i3-msg exit
menu-0-1 = 
menu-0-1-exec = reboot
menu-0-2 = 
menu-0-2-exec = shutdown now
menu-0-2-foreground = ${colors.accent}


[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over



[global/wm]
margin-top = 5
margin-bottom = 5

