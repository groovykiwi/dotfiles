font pango:SF Pro Text 13
gaps inner 10
#smart_gaps on

# Window Colors
set_from_resource $fg i3wm.color7 #f0f0f0
set_from_resource $bg i3wm.color0 #000000
#                       border  background text  indicator
client.focused          $bg     $bg        $fg   $bg       
client.focused_inactive $bg     $bg        $fg   $bg       
client.unfocused        $bg     $bg        $fg   $bg       
client.urgent           $bg     $bg        $fg   $bg       


focus_on_window_activation urgent

# Remove borders for all window (to move floating use $mod+mouse)
for_window [class="^.*"] border pixel 0

for_window [class="Pavucontrol"] floating enable border normal
for_window [class="firefox" instance="Places"] floating enable border normal
for_window [class="G213colors-gui"] floating enable border normal
for_window [class="Piper"] floating enable border normal
for_window [class="Tk"] floating enable border normal
for_window [class="Cm-rgb-gui"] floating enable border normal
for_window [class="Cm-rgb-monitor-gui"] floating enable border normal
for_window [class="scrcpy"] floating enable
for_window [class="Baobab"] floating enable border normal
for_window [instance="floatterm"] floating enable border normal
for_window [instance="spotify-lyrics"] floating enable border normal

# Assign windows to Workspaces
assign [class="Brave-browser"] $ws2
assign [class="firefox"] $ws2
assign [class="Sublime"] $ws3
assign [class="Transmission-gtk"] $ws8
assign [class="Minecraft.*"] $ws9
assign [class="FML.*"] $ws9
assign [class="MultiMC5"] $ws9
assign [class="Steam"] $ws9

for_window [class="Spotify"] move to workspace $ws10
